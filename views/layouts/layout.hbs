<body>

{{> header}}

<div class="container" style="padding-bottom: 100px;">
    {{#if pageHeader}}
    <div class="row TM-header">
        <div class="col-sm-4">
            <h1><a class="navbar-brand" href="/"><strong>TM</strong> Book</a></h1>
        </div>
        <div class="col-sm-5 search-bar">
            <div id="imaginary_container">
                <div class="input-group stylish-input-group">
                    <input type="text" class="form-control"  placeholder="Search" >
                    <span class="input-group-addon">
                        <button type="submit">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>
        <div class="col-sm-3 cart">
            <a href="/view-cart" class="btn btn-default">
                <span class="glyphicon glyphicon-shopping-cart"></span>
                <p style="float:right">0</p>
            </a>

        </div>
    </div>
    {{else}}
    <div style="padding-top:80px">

    </div>
    {{/if}}

    {{#unless hideBreadcrumb}}
    <ul class="breadcrumb">
        <li><a href="/">TM</a></li>
        {{#each breadcrumbs}}
        {{#if @last}}
        <li>{{title}}</li>
        {{else}}
        <li><a href="{{link}}">{{title}}</a></li>
        {{/if}}
        {{/each}}
    </ul>
    {{/unless}}

    <!-- Body after breadcrumb -->
    {{{body}}}

</div>
{{> footer}}
</body>
