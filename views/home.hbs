<div class="TM-body">

    <div class="row">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                  <div class="carousel-caption">
                      <h2>Design custom T-shirts & More</h2>
                      <h4>Your Design. Quality Apparel. Free Shipping.</h4>
                      <a style="" href="/products" type="button" class="btn btn-success custom-button">Get Started</a>
                  </div>
                    <div class="item active">
                        <img src="/img/banner/banner11.png" alt="Los Angeles" style="width:100%;">
                    </div>

                    <div class="item">
                        <img src="/img/banner/banner5.png" alt="Chicago" style="width:100%;">

                    </div>

                    <div class="item">
                        <img src="/img/banner/banner8.png" alt="New York" style="width:100%;">

                    </div>

                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <div class="row" style="padding-top: 20px;">
        <div class="col-sm-8">
            <img src="/img/banner/banner9.png" style="width: 100%">
        </div>
        <div class="col-sm-4">
            <img src="/img/banner/banner3.png" style="width: 100%">
        </div>
        <!--<div class="col-sm-3">-->
            <!--<img src="/img/banner/banner3.png" style="width: 100%">-->
        <!--</div>-->
    </div>


    <div class="row TM-categories" style="background: white; margin: 20px">
		<div class="row header">
	        <div class="col-sm-8">
	            <h3 style="padding-left: 20px; margin-top: 10px; margin-bottom: 30px;">Most Popular</h3>
	        </div>
	        <div class="col-sm-4" style="text-align: right; line-height: 40px;">
	            <a href="/products" style="text-decoration: none; font-size: 16px;">
	                <p style=" padding-right: 20px;">View More
	                    <span><i class="glyphicon glyphicon-triangle-right"></i> </span>
	                </p>
	            </a>
	        </div>

	    </div>

