        <div class="col-sm-12 book-list">
            <div class="container-fluid">
                {{#each products}}
                    {{#if isStartLine}}
                    <div class="row" style="margin-bottom: 30px;">
                    {{/if}}
					<!-- Start product -->
                    <div class="col-sm-3 product-item type-{{typeId}}">
                        <a href="/products/{{id}}">
                            <img src="{{imagePath1}}" width="100%">
                            <div class="percent">{{discount}}%</div>
                            <p class="book-title">{{name}}</p>
                        </a>
                        <p><span class="price">{{formatNumber discountPrice style="currency" currency="USD"}}</span> <span class="original-price">{{formatNumber price style="currency" currency="USD"}}</span></p>
						<div class="size">Size:
							<span class="size">{{minSizeLatin}}</span>
							-
							<span class="size">{{maxSizeLatin}}</span>
						</div>
                    </div>
					<!-- End product -->
                    {{#if isBreakLine}}
                    </div>
                    {{/if}}
                {{/each}}
            </div>

            <div class="center">
                {{{paginateHelper pagination leftText="Prev" rightText="Next" paginationClass="pagination"}}}
            </div>

