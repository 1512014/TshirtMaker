<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <!-- <h3 class="card-title">Data Table With Full Features</h3> -->
                        <a type="button" class="btn btn-primary add-new" href="{{addNewPage}}">
                            Add New
                        </a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>User</th>
                                <th>Product</th>
								<th>Qty</th>
                                <th>Subtotal</th>
								<th>Shipping</th>
								<th>Status</th>
								<th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
							{{#each orders}}

                            <tr>
                                <td>{{id}}</td>
                                <td>{{user.firstName}} {{user.lastName}}</td>
                                <td>{{product.name}}</td>
								<td>{{product.qty}}</td>
								<td>{{subtotal}}</td>
								<td>{{shipping}}</td>
                                <td>
									<select class="form-control order-status" id="order-status-{{id}}" data-order-id="{{id}}">
										<option value="pending" {{#ifCond status '==' 'pending'}} selected {{/ifCond}}>Pending</option>
										<option value="processing" {{#ifCond status '==' 'processing'}} selected {{/ifCond}}>Processing</option>
										<option value="delivered" {{#ifCond status '==' 'delivered'}} selected {{/ifCond}}>Delivered</option>
									</select>
								</td>
                                <th>
                                    <div class="btn-group">
                                        <a href="/admin/orders/{{id}}" type="button" class="btn btn-default">View</a>
                                        <button type="button" class="btn btn-danger delete-order" data-order-id="{{id}}">Delete</button>
                                    </div>
                                </th>
                            </tr>
							{{/each}}

                            </tbody>
                            <tfoot>
                            <tr>
								<th>#</th>
                                <th>User</th>
                                <th>Product</th>
								<th>Qty</th>
                                <th>Subtotal</th>
								<th>Shipping</th>
								<th>Status</th>
								<th>Action</th>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</div>
